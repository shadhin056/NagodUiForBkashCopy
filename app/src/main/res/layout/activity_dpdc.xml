                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="2">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:padding="4dp"
                    android:weightSum="2">
